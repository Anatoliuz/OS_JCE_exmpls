<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.rushd.jceapplication.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check JCE!" android:id="@+id/textView" android:textSize="18sp"/>

    <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do work!"
            android:layout_below="@+id/editbox" android:layout_centerHorizontal="true"/>
    <Spinner
            android:id="@+id/planets_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"/>
    <EditText
            android:id="@+id/editbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:autoText="true"
            android:layout_marginTop="14dp"
            android:maxLength="2000"
            android:maxLines="4"
            android:layout_below="@+id/planets_spinner" android:layout_alignParentStart="true"/>
    <EditText
            android:id="@+id/answer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLength="2000"
            android:maxLines="4"
            android:layout_marginTop="54dp"
            android:layout_below="@+id/editbox" android:layout_alignParentStart="true"/>
    />
</RelativeLayout>
